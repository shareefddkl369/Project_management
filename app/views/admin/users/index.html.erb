<div>
  Users List:
</div>
<table cellpadding="0" cellspacing="0" width="100%" id="users_list">
  <tr class="table_heading">
    <th>S.No</th> <th>User Name</th> <th>Role</th><th></th> 
  </tr>
  <%  User.all.each_with_index do |u,i| %>
  <tr class="<%= cycle("trodd","treven") %>">
    <td style="border-left: 1px solid #bfbfc0;"><%=i+1%></td><td><%= u.first_name.capitalize%></td><td><%= u.role%></td><td style="border-right: 1px solid #bfbfc0;"><%= link_to "edit", edit_admin_user_path(u.id) %></td>
  </tr>  
<% end %>
  <tr class="last_row"><td colspan="4"></td></tr>
</table>
